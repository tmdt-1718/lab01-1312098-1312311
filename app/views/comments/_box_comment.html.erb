<%= render  "shared/errors", obj: comment %>

<div>
    <div class="row">
        <div class=" well col-xs-8 col-xs-offset-2">
            <%= form_for(comment, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            
            <div class="form-group">
                <div class="col-xs-12">
                    <%= f.text_area :comment, rows: 3, class: "form-control", placeholder: "Enter your comment", :autocomplete => :off %>
                </div>
            </div>
            <%= f.hidden_field :article_id, :value => article.id %>
            <div class="form-group">
                <div class="col-xs-11 ", align="right">
                    <%= f.submit "Post comment", class: 'btn btn-primary btn-lg' %>
                </div>
            </div>
            <% end %>
        </div>
    </div>
</div>

