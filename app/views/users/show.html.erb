<h1 align="center">Welcome to <%= @user.username %>'s page</h1>
<% breadcrumb :user, @user %>

<div class="row">
    <div class="col-md-4 col-md-offset-4 center">
    <%= gravatar_for c.user, size: 50 if !@user.avatar%>
    <%= cl_image_tag @user.avatar , :width => 150, :height => 150, 
                           :crop => :fill, :gravity => :face,
                           :radius => :max  if @user.avatar %>
    </div>
</div>
<h4 align="center"><%= @user.username %>'s articles</h4>
<div class="center">
    <%= will_paginate @user_articles %>
</div>
<%= render  "articles/article", obj: @user_articles %>
<div class="center">
    <%= will_paginate @user_articles %>
</div>