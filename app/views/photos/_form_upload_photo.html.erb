<%= render  "shared/errors", obj: @photo %>

<div class="row">
    <div class="col-xs-12">
        <%= form_for(@photo, :html => {class: "form-horizontal", role: "form"}, remote: true) do |f| %>


       <div class="form-group">
            <div class="control-label col-sm-2">
                <%= f.label "Select your photo" %>
            </div>
            <div class="col-sm-8 ">
                <%= f.file_field :img %>
             </div>
        </div>

        <%= f.hidden_field :album_id, :value => album.id %>
   
        <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
                <%= f.submit "Upload", class: 'btn btn-primary btn-lg' %>
            </div>
        </div>
        <% end %>
    </div>
</div>