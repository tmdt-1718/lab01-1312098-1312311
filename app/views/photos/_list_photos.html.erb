<div id="photo-section">
    <div class="row">
        <% if @photo.img %>
            <div id="photo-list">
                <div class="col-xs-4">            
                    <div class="thumbnail">
                        <div class="caption">
                            <h4>Thumbnail Headline</h4>
                            <p>short thumbnail description</p>
                        </div>
                        <%= cl_image_tag @photo.img %>
                    </div>
                </div>
            </div>
        <% end %>
       
    </div>      
</div>